<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1_personas"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:contentDescription="@string/img_contactos_mainPersonas"
            app:srcCompat="@drawable/contacto1" />

        <ImageView
            android:id="@+id/imageView2_personas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img_contactos_mainPersonas"
            app:srcCompat="@drawable/contacto22" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3_personas"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="1"
            android:contentDescription="@string/img_contactos_mainPersonas"
            app:srcCompat="@drawable/contacto3" />

        <ImageView
            android:id="@+id/imageView4_personas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img_contactos_mainPersonas"
            app:srcCompat="@drawable/contacto4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5_personas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img_contactos_mainPersonas"
            app:srcCompat="@drawable/contacto5" />

        <ImageView
            android:id="@+id/imageView6_personas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img_contactos_mainPersonas"
            app:srcCompat="@drawable/contacto6" />
    </LinearLayout>
</LinearLayout>